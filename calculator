#include <iostream>
using namespace std;
int Calc(int i, int x, int y) 
{
	switch (i)
		case 1:
			return x + y;
		case 2;
			return x - y;
		case 3:
			return x / y;
		case 4: 
			return x * y;
}	
int main() {
	int i, x, y
	cout << "please enter a operation you would like to peroform" << endl;
	cout << "Options are 1: addition 2:subtraction 3:division 4:multiplication" << endl;
	cin >> i;
	
	cout << "enter two numbers" << endl;
	cin >> x >> y;
	int Calc(i, int x, int y)
}
